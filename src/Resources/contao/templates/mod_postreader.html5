
<div class="<?= $this->class ?> block"<?= $this->cssID ?><?php if ($this->style): ?> style="<?= $this->style ?>"<?php endif; ?>>

  <?php $this->block('headline'); ?>
    <?php if ($this->headline): ?>
      <<?= $this->hl ?>><?= $this->headline ?></<?= $this->hl ?>>
    <?php endif; ?>
  <?php $this->endblock(); ?>

  <?php $this->block('post'); ?>
    <?= $this->post ?>
  <?php $this->endblock(); ?>

  <?php if ($this->backlink): ?>
    <?php $this->block('backlink'); ?>
      <!-- indexer::stop -->
      <p class="back"><a href="<?= $this->backlink ?>" title="<?= $this->back ?>"><?= $this->back ?></a></p>
      <!-- indexer::continue -->
    <?php $this->endblock(); ?>
  <?php endif; ?>

  <?php if ($this->addRelated && $this->related) : ?>
    <?php $this->block('related'); ?>
      <!-- indexer::stop -->
      <div class="related">
        <?= $this->related ?>
      </div>
      <!-- indexer::continue -->
    <?php $this->endblock(); ?>
  <?php endif; ?>

  <?php if ($this->addComments && !$this->noComments && $this->post) : ?>
    <?php $this->block('comments'); ?>
      <div class="comments">
        <?php if (is_array($this->comments)) { echo implode('', $this->comments); } ?>
        <?= $this->pagination ?>
        <?php $this->insert('mod_comment_form', $this->arrData); ?>
      </div>
    <?php $this->endblock(); ?>
  <?php endif; ?>

</div>
